{
	"name": "Chrome Ad Remover v1",
	"description": "Chrome Ad Remover with mutation observer",
	"version": "1.0",
	"manifest_version": 3,
	"action": {
		"default_popup": "ui/extension_ui.html",
		"default_icon": {
			"128" : "ui/chrome_ad_remover_v1_icon.png"
			}
	},
	"permissions": [
	"storage"
	],
  
  "content_scripts": [
    {
      "js": [
		"content/util.js",
		"content/generator.js",
		"content/cabmutationobserver.js",
		"content/sites/site.js",
		"content/sites/halktv/halktv_main.js",
		"content/sites/halktv/halktv.js",
		"content/content.js"
		],
      "matches": [
        "http://*.halktv.com.tr/*",
		"https://*.halktv.com.tr/*"
      ],
	  "run_at": "document_start"
    },
	
	{
      "js": [
		"content/util.js",
		"content/generator.js",
		"content/cabmutationobserver.js",
		"content/sites/site.js",
		"content/sites/cumhuriyet/cumhuriyet_main.js",
		"content/sites/cumhuriyet/cumhuriyet.js",
		"content/content.js"
		],
      "matches": [
        "http://*.cumhuriyet.com.tr/*",
		"https://*.cumhuriyet.com.tr/*"
      ],
	  "run_at": "document_start"
    },
	
	{
      "js": [
		"content/util.js",
		"content/generator.js",
		"content/cabmutationobserver.js",
		"content/sites/site.js",
		"content/sites/sozcu/sozcu_main.js",
		"content/sites/sozcu/sozcu.js",
		"content/content.js"
		],
      "matches": [
        "http://*.sozcu.com.tr/*",
		"https://*.sozcu.com.tr/*"
      ],
	  "run_at": "document_start"
    },
	
	{
      "js": [
		"content/util.js",
		"content/generator.js",
		"content/cabmutationobserver.js",
		"content/sites/site.js",
		"content/sites/onedio/onedio_main.js",
		"content/sites/onedio/onedio.js",
		"content/content.js"
		],
      "matches": [
        "http://*.onedio.com/*",
		"https://*.onedio.com/*"
      ],
	  "run_at": "document_start"
    },
	
	{
      "js": [
		"content/util.js",
		"content/generator.js",
		"content/cabmutationobserver.js",
		"content/sites/site.js",
		"content/sites/buzzfeed/buzzfeed_main.js",
		"content/sites/buzzfeed/buzzfeed.js",
		"content/content.js"
		],
      "matches": [
        "http://*.buzzfeed.com/*",
		"https://*.buzzfeed.com/*"
      ],
	  "run_at": "document_start"
    },
	
	{
      "js": [
		"content/util.js",
		"content/generator.js",
		"content/cabmutationobserver.js",
		"content/sites/site.js",
		"content/sites/donanimhaber/donanimhaber_main.js",
		"content/sites/donanimhaber/donanimhaber.js",
		"content/content.js"
		],
      "matches": [
		"http://*.donanimhaber.com/*",
		"https://*.donanimhaber.com/*"
      ],
	  "run_at": "document_start"
    }
  ]
}
