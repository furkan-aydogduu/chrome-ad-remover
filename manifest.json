{
	"name": "Chrome Ad Remover v2",
	"description": "Chrome ad remover with tree scan",
	"version": "2.0",
	"manifest_version": 3,
	
	"action": {
		"default_popup": "ui/extension_ui.html",
		"default_icon": {
			"128" : "ui/chrome_ad_remover_icon.png"
			}
	},
	"permissions": [
	"storage"
	],
  
  "content_scripts": [
    {
      "js": [
		"content/util.js",
		"content/generator.js",
		"content/cabdomscanner.js",
		"content/sites/site.js",
		"content/sites/halktv/halktv_main.js",
		"content/sites/halktv/halktv.js",
		"content/content.js"
		],
      "matches": [
        "*://*.halktv.com.tr/*"
      ],
	  "run_at": "document_start"
    },
	
	{
      "js": [
		"content/util.js",
		"content/generator.js",
